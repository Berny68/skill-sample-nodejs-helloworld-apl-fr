{
    "type": "APL",
    "version": "1.0",
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "width": "100%",
                "height": "100%",
                "justifyContent" : "center",
                "alignItems": "center",
                "item": [
                    {
                        "type": "Image",
                        "source": "${payload.templateData.image}",
                        "width": "20vw",
                        "height": "20vw",
                        "scale": "best-fill"
                    },
                    {
                        "type": "Text",
                        "text": "${payload.templateData.text}",
                        "color" : "#FF0000",
                        "paddingTop" : "10vw"
                    }
                ]
            }
        ]
    }
}